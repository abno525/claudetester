{
  "name": "minecraft-captcha",
  "version": "1.0.0",
  "description": "A Minecraft crafting table CAPTCHA widget â€” embeddable, reusable, and framework-agnostic",
  "type": "module",
  "main": "dist/server/index.js",
  "exports": {
    "./widget": {
      "import": "./dist/widget/minecraft-captcha.js",
      "types": "./dist/widget/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:widget\" \"npm:dev:server\"",
    "dev:widget": "vite",
    "dev:server": "tsx watch src/server/index.ts",
    "start": "npm run build && node dist/server/index.js",
    "build:widget": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:widget && npm run build:server",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "captcha",
    "minecraft",
    "crafting",
    "widget",
    "security"
  ],
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "express": "^5.0.0",
    "jose": "^6.1.3"
  }
}
