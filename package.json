{
  "name": "minecraft-captcha",
  "version": "0.1.0",
  "description": "Minecraft crafting table CAPTCHA widget",
  "main": "dist/minecraft-captcha.js",
  "scripts": {
    "build": "esbuild src/client/index.ts --bundle --minify --outfile=dist/minecraft-captcha.js --format=iife --global-name=MinecraftCaptcha --target=es2020",
    "build:dev": "esbuild src/client/index.ts --bundle --outfile=dist/minecraft-captcha.js --format=iife --global-name=MinecraftCaptcha --target=es2020 --sourcemap",
    "watch": "esbuild src/client/index.ts --bundle --outfile=dist/minecraft-captcha.js --format=iife --global-name=MinecraftCaptcha --target=es2020 --sourcemap --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "license": "MIT"
}
